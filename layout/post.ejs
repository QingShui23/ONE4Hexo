<div class="post-bg" style="background-image: url(<% if (page.image){ %><%- page.image %><% }else{%><%- theme.img.default_thum %><% } %>);"></div>

<div class="site-wrapper" page-type="c-post">
<main class="content" role="main">
	<div class="post-toppic" style="">
        <div class="picbox">
          <img node-type="articleHeaderPic" src="<% if (page.image){ %><%- page.image %><% }else{%><%- theme.img.default_thum %><% } %>">
        </div>
     </div>
    <article class="post">

        <header class="post-header">
            <h1 class="post-title"><%- page.title %></h1>
            <section class="post-meta">
                <img class="author-thumb" src="<%- theme.img.avatar %>" alt="<%- theme.info.name %>" nopin="nopin" />
                <a href="<%- page.permalink %>"><%- theme.info.name %></a>
                <time class="post-date post-none" datetime="<%- date(page.date,'YYYY-MM-DD') %>"><%- date(page.date,'YYYY-MM-DD') %></time>
                <a href="<%- page.permalink %>#comment" class="post-comment post-none">有<span data-disqus-url="<%- page.permalink %>"></span>条评论</a>
                <span class="post-date">总计<%- wordcount(page.content) %>字</span>
                <span class="post-date">预计<%- min2read(page.content) %>分钟读完</span>

            </section>
        </header>

        <section class="post-content">
            <%- page.content %>
        </section>

        <footer class="post-footer">

            <figure class="author-image">
                <a class="img" href="" style="background-image: url(<%- theme.img.avatar %>)"><span class="hidden">的头像</span></a>
            </figure>


            <section class="author">
                <h4><a href="#"><% theme.info.name %></a></h4>

                    <p><%- theme.info.description %></p>

                    <p>继续阅读此作者的<a href="<%- theme.info.website %>">更多文章</a>。</p>

                <div class="author-meta">
                    <span class="author-location icon-location"><%- theme.info.location %></span>
                    <span class="author-link icon-link"><a href="<%- theme.info.website %>"><%- theme.info.website %></a></span> 
                </div>
            </section>


            <section class="share">
                <h4>分享此博文</h4>
                <div class="bdsharebuttonbox"><a href="#" class="bds_more" data-cmd="more"></a><a href="#" class="bds_tsina" data-cmd="tsina" title="分享到新浪微博"></a><a href="#" class="bds_weixin" data-cmd="weixin" title="分享到微信"></a><a href="#" class="bds_douban" data-cmd="douban" title="分享到豆瓣网"></a><a href="#" class="bds_renren" data-cmd="renren" title="分享到人人网"></a></div>
<script>window._bd_share_config={"common":{"bdSnsKey":{},"bdText":"","bdMini":"2","bdMiniList":false,"bdPic":"","bdStyle":"1","bdSize":"24"},"share":{}};with(document)0[(getElementsByTagName('head')[0]||body).appendChild(createElement('script')).src='http://bdimg.share.baidu.com/static/api/js/share.js?v=89860593.js?cdnversion='+~(-new Date()/36e5)];</script>

            </section>

        </footer>
	<div id="comment"></div>
    </article>

</main>
    <aside class="read-next">
        <% if (page.prev) { %>
        <a class="read-next-story" style="background-image: url(<% if (page.prev.image){ %><%- page.prev.image %><% }else{%><%- theme.img.default_thum %><% } %>)" href="<%- page.prev.permalink %>">
            <section class="post">
                <h2><%- page.prev.title %></h2>
                <p><%- page.prev.content.replace(/<(?:.|\n)*?>/gm, '').substr(0, 100) %>&hellip;</p>
            </section>

        </a>
        <% } %>
        <% if (page.next) { %>
        <a class="read-next-story prev " style="background-image: url(<% if (page.next.image){ %><%- page.next.image %><% }else{%><%- theme.img.default_thum %><% } %>)" href="<%- page.next.permalink %>">
            <section class="post">
                <h2><%- page.next.title %></h2>
                <p><%- page.next.content.replace(/<(?:.|\n)*?>/gm, '').substr(0, 100) %>&hellip;</p>
            </section>
        </a>
        <% } %>
    </aside>
